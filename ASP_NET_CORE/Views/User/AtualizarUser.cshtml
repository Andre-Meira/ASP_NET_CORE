@model ASP_NET_CORE.Models.User
  
@{
    ViewData["Title"] = "Atulizar User";
}


<h2>Atulizar User</h2>

<div class="row">
    <div>
        <form asp-action="AtualizarUser">
            <input type="hidden" asp-for="UserID" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="control-label" />
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="control-label" />
            </div>

            <input type="submit" value="Atulizar" class="btn btn-info" />

        </form>

        <a asp-action="Index" class="btn btn-link">Voltar</a>

    </div>
    
</div>